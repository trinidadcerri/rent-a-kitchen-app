<div class="map" style="background-image: url('<%= cl_image_path @kitchen.photo.key %>')"></div>
<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="kitchen-show-card">
        <h1><%= @kitchen.name %></h1>
        <p class="kitchen-show-address">Address:<%= @kitchen.address %></p>
      </div>
      <div class="kitchen-show-card">
        <h3>A bit more about this kitchen...</h3>
        <p>Description:<%= @kitchen.description %></p>
      </div>
    </div>

    <div class="col-4">
      <div class="kitchen-show-card">
        <h5>Book this place!</h5>

        <form action="">
          <div class="input-group">
            <span class="input-group-text" id="start-date-label">From:</span>
            <input type="text" class="form-control" placeholder="09/03/2023" aria-label="start-date" aria-describedby="start-date-label">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-text" id="end-date-label">To:</span>
            <input type="text" class="form-control" placeholder="10/03/2023" aria-label="end-date" aria-describedby="start-date-label">
          </div>
          <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
        </form>
      </div>
      <div class="kitchen-show-card">
        <h3>Details</h3>
        <div class="flex">
          <div class="flex">
            <%= @kitchen.capacity %> people
          </div>
          <div class="flex ms-3">
            <%= @kitchen.price %>â‚¬
          </div>
        </div>
      </div>
      <div class="kitchen-show-card">
        <div class="flex-align">
          <h6 class="no-mb">Share</h6>

          <div class="flex">
            <i class="fa-brands fa-facebook-square me-2"></i>
            <i class="fa-brands fa-twitter-square me-2"></i>
            <i class="fa-brands fa-pinterest-square me-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
